#!/usr/bin/env ruby

require File.expand_path(
    File.join(File.dirname(__FILE__), %w[.. lib htk]))

# Put your code here

hmm = Htk::HTKHMMModel.new("paco",4,8)
composition = Htk::HTKHMMComposition.new("proto",8)
composition.add_hmm(hmm)
composition.write


config_file = Htk::ConfigATROS.new
config_file.SOURCEFORMAT="ATROS"
config_file.NUMCEPS=8
config_file.TARGETKIND="MFCC"

config_file.write


composition = Htk::HTKHMMComposition.load("proto")

composition.name = "arturo"

composition.write


